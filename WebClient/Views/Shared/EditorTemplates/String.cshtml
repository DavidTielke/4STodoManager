@model System.String
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m)
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" name="@Html.NameFor(m => m)" id="@Html.IdFor(m => m)" value="@Html.ValueFor(m => m)" />
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(m => m)
        </div>
    </div>
</div>
