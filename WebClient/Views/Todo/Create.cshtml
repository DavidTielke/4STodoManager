@model TodoItem
@{
    ViewBag.Title = "Neue Aufgabe";
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Daten</legend>

        <div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.Text)
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Text, new {@class = "form-control"})

                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.Text)
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.DueDate)
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.DueDate)
                    </div>
                </div>
            </div>
        </div>

        <input class="btn btn-primary" type="submit" value="Hinzufügen" />
    </fieldset>

    <div>
        @Html.ValidationSummary()
    </div>

}
