@model IEnumerable<TodoItem>
    @{
        ViewBag.Title = "Übersicht";
    }
<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fälligkeit</th>
        <th>Erledigt</th>
        <th>Optionen</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Text</td>
            <td>@item.DueDate</td>
            <td>@item.IsDone</td>
            <td>
                <a href="@Url.Action("DeleteConfirm", new {id = item.Id})">del</a>
                @Html.ActionLink("del", "DeleteConfirm", new {id = item.Id})
            </td>
        </tr>
    }
    </tbody>
</table>
