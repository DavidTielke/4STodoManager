@model IEnumerable<TodoItem>
    @{
        ViewBag.Title = "Übersicht";
    }
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fälligkeit</th>
        <th>Erledigt</th>
        <th>Optionen</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Text</td>
            <td>@Html.DisplayFor(m => item.DueDate)</td>
            <td>@item.IsDone</td>
            <td>
                <a class="btn btn-default btn-xs" href="@Url.Action("Update", new {id = item.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
                <a class="btn btn-default btn-xs" href="@Url.Action("DeleteConfirm", new {id = item.Id})"><span class="glyphicon glyphicon-remove"></span></a>
                
            </td>
        </tr>
    }
    </tbody>
</table>
